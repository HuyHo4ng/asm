@model IEnumerable<asm.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.courseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.courseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCredits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer.LecturerID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.courseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.courseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.courseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
